# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    output_format = "i3bar"
    colors = true
    interval = 3
}

order += "volume output"
order += "disk /"
order += "memory"
#order += "load"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "battery all"
order += "tztime local"

volume output {
     format = " o) %volume "
     format_muted = " o) %volume "
     device = "pulse"
     color_degraded = "#7f7f7f"
}

disk "/" {
    format = " %avail left "
}

load {
    format = " %1min wait "
}

cpu_usage {
     format = " [#] %usage "
}

memory {
    format = " [=] %used "
}

cpu_temperature 0 {
     format = " ! %degrees°C "
}

battery all {
     format = " =%status %percentage "
     status_bat = "="
     status_chr = "^"
     integer_battery_capacity = true
     last_full_capacity = true
     threshold_type = "percentage"
     low_threshold = 15
}

tztime local {
     format = " %a %d %b W%V %H:%M "
}
